{
    "name": "cakasim/payone-sdk",
    "description": "A SDK for PAYONE payment integration.",
    "type": "library",
    "keywords": [
        "payone",
        "payment",
        "sdk"
    ],
    "homepage": "https://cakasim.de",
    "readme": "README.md",
    "license": "MIT",
    "authors": [
        {
            "name": "Fabian BÃ¶ttcher",
            "email": "me@cakasim.de",
            "homepage": "https://cakasim.de",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "support@cakasim.de",
        "issues": "https://github.com/Cakasim/php-payone-sdk/issues",
        "source": "https://github.com/Cakasim/php-payone-sdk"
    },
    "minimum-stability": "stable",
    "require": {
        "php": "^7.1",
        "psr/http-message": "^1.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/log": "^1.1",
        "psr/container": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Cakasim\\Payone\\Sdk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cakasim\\Payone\\Sdk\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "ext-curl": "Required in order to use the cURL HTTP driver."
    },
    "require-dev": {
    },
    "scripts": {
        "cakasim:phpdoc": "php vendor/bin/phpdoc",
        "cakasim:phpcsf": "php vendor/bin/phpcsf",
        "cakasim:phpunit": "php vendor/bin/phpunit",
        "cakasim:phpstan": "php vendor/bin/phpstan",
        "cakasim:download-phpdoc": "curl -L https://github.com/phpDocumentor/phpDocumentor/releases/download/v3.0.0-alpha.4/phpDocumentor.phar --create-dirs --output vendor/bin/phpdoc",
        "cakasim:download-phpcsf": "curl -L https://cs.symfony.com/download/php-cs-fixer-v2.phar --create-dirs --output vendor/bin/phpcsf",
        "cakasim:download-phpunit": "curl -L https://phar.phpunit.de/phpunit-8.phar --create-dirs --output vendor/bin/phpunit",
        "cakasim:download-all": [
            "@cakasim:download-phpdoc",
            "@cakasim:download-phpcsf",
            "@cakasim:download-phpunit"
        ],
        "cakasim:tests": "@cakasim:phpunit --bootstrap vendor/autoload.php --testdox --coverage-html build/coverage --whitelist src tests",
        "cakasim:qa": [
            "@cakasim:phpcsf fix --dry-run --diff",
            "@cakasim:phpdoc",
            "@cakasim:phpunit --bootstrap vendor/autoload.php --testdox --coverage-html build/coverage --whitelist src tests"
        ],
        "cakasim:code-style": "@cakasim:phpcsf fix --dry-run --diff --allow-risky=yes",
        "cakasim:make-docs": "@cakasim:phpdoc",
        "cakasim:static-analysis": "@cakasim:phpstan analyse"
    },
    "scripts-descriptions": {
        "cakasim:download-phpdoc": "Downloads latest phpDocumentor PHAR and saves it as phpdoc.",
        "cakasim:download-phpcsf": "Downloads latest PHP Coding Standards Fixer and saves it as phpcsf.",
        "cakasim:download-phpunit": "Downloads latest PHPUnit 8 and saves it as phpunit."
    }
}
